{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"main.cpp",
				"mapgen.cpp",
				"player.cpp",
				"bsp_algorithm.cpp",
				"enemy.cpp",
				"audio.cpp",
				"timer.cpp",
				"pause.cpp",
				"options.cpp",
				"view_manager.cpp",
				"credits.cpp",
				"menu.cpp",
				"leaderboard.cpp",
				"controls.cpp",

				//"-I\"S:/sfml projects/library/SFML-3.0.0/include\"",
				"-I\"C:/Users/USER/Documents/SFML-3.0.0/include\"",

				"-DSFML_STATIC",
				"-o",
				"${fileDirname}\\main.exe",

				//"-L\"S:/sfml projects/library/SFML-3.0.0/lib\"",
				"-L\"C:/Users/USER/Documents/SFML-3.0.0/lib\"",

				"-lsfml-graphics-s",
				"-lsfml-window-s",
				"-lsfml-audio-s",
				"-lsfml-system-s",
				"-lopengl32",
				"-lfreetype",
				"-lwinmm",
				"-lgdi32",
				"-lflac",
                "-lvorbisenc",
                "-lvorbisfile",
                "-lvorbis",
                "-logg",
				//"-mwindows"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		},
		{
            "type": "cppbuild",
            "label": "Build Menu",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
				"main_menu.cpp",
                "menu.cpp",
				"options.cpp",
				"audio.cpp",
				"view_manager.cpp",
				"credits.cpp",

                //"-I\"S:/sfml projects/library/SFML-3.0.0/include\"",
				"-I\"C:/Users/USER/Documents/SFML-3.0.0/include\"",

                "-DSFML_STATIC",
                "-o",
                "${fileDirname}\\main_menu.exe",

                //"-L\"S:/sfml projects/library/SFML-3.0.0/lib\"",
				"-L\"C:/Users/USER/Documents/SFML-3.0.0/lib\"",

                "-lsfml-graphics-s",
                "-lsfml-window-s",
                "-lsfml-audio-s",
                "-lsfml-system-s",
                "-lopengl32",
                "-lfreetype",
                "-lwinmm",
                "-lgdi32",
                "-lflac",
                "-lvorbisenc",
                "-lvorbisfile",
                "-lvorbis",
                "-logg",
                //"-mwindows"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
	]
}

